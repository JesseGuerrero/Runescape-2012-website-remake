                                    <div class="Article ArticleImage">
                                        <div class="NewsHeaderImage">
                                            <img src="https://raw.githubusercontent.com/JesseGuerrero/web-files-darkan/master/2012/NoImage.jpg" alt="" title="">
                                            <div></div>
                                        </div>
                                        {{> news/UpdateIcon}}
                                        <div class="Title">
                                            <h4 class="FlatHeader">{{article.title}}</h4>
                                            <br style="clear:both">
                                            <span>{{article.createdAt}}</span>
                                        </div>
                                        <div class="Content">
                                            {{{article.sanitizedHtml}}}
                                            {{#if isModerator}}
                                                <a href="/news/edit/{{article._id}}"><u>Edit Article</u></a>
                                            {{/if}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{> Footer}}
            </div>
        </div>
